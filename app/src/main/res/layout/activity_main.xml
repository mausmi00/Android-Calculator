<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Exp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".2"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear"
                style="@style/Button"
                android:layout_height="90dp"
                android:text="C" />

            <TextView
                android:id="@+id/brackets"
                style="@style/Button"
                android:layout_height="90dp"
                android:text="()" />

            <TextView
                android:id="@+id/percent"
                style="@style/Button"
                android:layout_height="90dp"
                android:text="%" />

            <TextView
                android:id="@+id/divide"
                style="@style/Button"
                android:layout_height="90dp"
                android:text="/" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="7" />
            android:text="7"/>

            <TextView
                android:id="@+id/eight"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="8" />

            <TextView
                android:id="@+id/nine"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="9" />

            <TextView
                android:id="@+id/multi"
                style="@style/Button"
                android:layout_height="90dp"

                android:text="X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="4" />
            android:text="4"/>

            <TextView
                android:id="@+id/five"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="5" />

            <TextView
                android:id="@+id/six"
                style="@style/numberButton"

                android:layout_height="90dp"
                android:text="6" />

            <TextView
                android:id="@+id/minus"
                style="@style/Button"
                android:layout_height="90dp"

                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="1" />


            <TextView
                android:id="@+id/two"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="2" />

            <TextView
                android:id="@+id/three"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="3" />

            <TextView
                android:id="@+id/plus"
                style="@style/Button"
                android:layout_height="90dp"

                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/point"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="."
                />
            android:text="."/>

            <TextView
                android:id="@+id/zero"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="0" />

            <TextView
                android:id="@+id/back"
                style="@style/numberButton"
                android:layout_height="90dp"
                android:text="bs" />

            <TextView
                android:id="@+id/equal"
                style="@style/Button"
                android:layout_height="90dp"
                android:text="="
                 />



        </LinearLayout>

    </LinearLayout>
</LinearLayout>

